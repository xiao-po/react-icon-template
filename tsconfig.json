{
  "compilerOptions": {
    "outDir": "./src/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types/",
    "declarationMap": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "baseUrl": "./lib",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "jsx": "react",
    "lib": ["dom", "es2015", "esnext"]
  },
  "exclude": ["node_modules", "dist", "example"],
  "include": ["lib"]
}
